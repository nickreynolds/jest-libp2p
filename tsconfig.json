{
    "compilerOptions": {
      "strict": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "declarationMap": true,
      "declaration": true,
      "composite": true,
      "emitDecoratorMetadata": true,
      "useUnknownInCatchVariables": false,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "outDir": "build"
    },
    "exclude": [
      "**/tests/**/*",
      "**/build/**/*"
    ],
    "include": [
      "src/**/*"
    ]
  }
  